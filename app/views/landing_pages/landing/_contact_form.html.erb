<%= form_tag(landing_pages.contact_path, remote: true, id: 'contact-form') do %>
  <%= text_field_tag(:email, nil, placeholder: t('landing_pages.contact.email')) %>
  <%= text_area_tag(:message, nil, placeholder: t('landing_pages.contact.message')) %>
  <%= button_tag(type: "submit", class: "btn btn-primary") do %>
    <label class="submit-label"><%= t('landing_pages.contact.submit') %></label>
    <label class="submitted-label"><%= t('landing_pages.contact.submitted') %></label>
  <% end %>
<% end %>